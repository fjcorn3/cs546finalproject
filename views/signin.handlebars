<form action="/signin" method="POST" id="signinForm" class="auth-form">
  <div id="error" class="error" {{#unless error}} hidden {{/unless}}>
    <span id="error-message"> {{#if error}} {{error}} {{/if}} </span>
  </div>
  <label for="username">Username:</label>
  <input type="text" id="username" name="username">
  <br>
  <label for="password">Password:</label>
  <input type="password" id="password" name="password">
  <br> 
  <button type="submit">Sign In</button>
  <br>
  <br>
  <a href="/signup">Don't have an account? Sign up here!</a>
</form>
<script src="/public/js/validate_signin.js"></script>