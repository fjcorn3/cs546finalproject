<div class="content">


  <section class="content-section">
    <h2>{{event.name}}</h2>
    <p>{{event.date}}</p>
    <p>{{event.time}}</p>
    <p>${{event.price}}</p>
    <p>{{event.description}}</p>
    <br>tags:
    {{#each event.tags}}
    <span>{{this}}</span>
    {{/each}}
    <br>
    <a href="/profile/{{event.organizer._id}}">{{event.organizer.username}}</a>
    <br>
    <br>
    <p id="likes-count">{{event.likes}} Likes</p>
    <button id="rsvpButton">RSVP</button>
    <script type="module" src="/public/js/likes.js"></script>
    <button id="likeButton" data-event-id="{{event._id}}">Like</button>
    <button id="favoriteButton" data-event-id="{{event._id}}">Favorite</button>
  </section>


<section class="content-section">
    <h2>Comments</h2>
    <form id="commentForm" data-event-id="{{event._id}}">
        <label for="comment">Comment:</label>
        <textarea id="comment" name="comment" required></textarea>
        <button type="submit">Add Comment</button>
    </form>

    <div class="comments-container">
        {{#each event.comments}}
        <div class="comment">
            <strong>{{this.username}}</strong>:
            <p>{{this.text}}</p>
            <small>{{this.date}}</small>
        </div>
        {{/each}}
    </div>
</section>

<script src="/public/js/comments.js"></script>

</div>